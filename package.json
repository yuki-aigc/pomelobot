{
    "name": "pomelobot",
    "version": "1.0.0",
    "description": "Pomelobot: 智能助手，支持记忆、技能、定时任务与多渠道接入",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "dev": "tsx src/index.ts",
        "dingtalk": "tsx src/dingtalk.ts",
        "ios": "tsx src/ios.ts",
        "server": "tsx src/server.ts",
        "channels": "tsx src/server.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "start:server": "node dist/server.js",
        "start:channels": "node dist/server.js",
        "start:ios": "node dist/ios.js",
        "typecheck": "tsc --noEmit"
    },
    "keywords": [
        "deepagents",
        "ai",
        "agent",
        "sre"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@langchain/anthropic": "^1.3.15",
        "@langchain/core": "^1.1.19",
        "@langchain/langgraph": "^1.1.3",
        "@langchain/mcp-adapters": "^1.1.2",
        "@langchain/openai": "^1.2.5",
        "axios": "^1.7.0",
        "croner": "^10.0.1",
        "deepagents": "^1.7.0",
        "dingtalk-stream": "^2.1.4",
        "pg": "^8.18.0",
        "ws": "^8.19.0",
        "zod": "^3.23.0"
    },
    "devDependencies": {
        "@types/node": "^22.0.0",
        "@types/pg": "^8.16.0",
        "@types/ws": "^8.18.1",
        "tsx": "^4.19.0",
        "typescript": "^5.5.0"
    }
}
